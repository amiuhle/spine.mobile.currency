@import './mixin'

body
  color: #555
  font-weight: bold
  font-size: 0.67em
  font-family: "Helvetica Neue", sans-serif
  -webkit-user-select: none
  
button
  padding: 0.3em 0.5em
  background: #999
  color: #FFF
  font-size: 0.7em
  font-weight: normal
  border-radius: 3px
  font-family: "Helvetica Neue", sans-serif
  border: 0
  
em
  font-style: normal
  
h1, h2
  margin: 0em
  padding: 0em
  font-size: 1em
  
* 
  -webkit-tap-highlight-color: rgba(0,0,0,0)