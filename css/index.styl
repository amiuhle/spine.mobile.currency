@import './mixin'

body, html
  height: 100%
  
.viewport
  position: relative

  > *
    position: absolute
    left: 0
    right: 0
    top: 0
    bottom: 0

    &:not(.active)
      display: none
      
body.stage 
  > header
    position: absolute
    left: 0
    top: 0
    right: 0

  > article
    position: absolute
    left: 0
    right: 0
    top: 0
    bottom: 0
  
.panel
  vbox()
  
  > article
    box-flex(1)
    
    overflow: auto
    -webkit-overflow-scrolling: touch
    
@import './theme'
@import './views/currencies'
@import './views/currencies.picker'
@import './views/images'